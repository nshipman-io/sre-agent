# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Settings (Optional)
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Kubernetes Configuration (Optional)
# Leave K8S_CONFIG_PATH empty to use in-cluster config
# For local dev with kubeconfig, it's mounted via docker-compose volumes
K8S_CONFIG_PATH=/root/.kube/config
K8S_NAMESPACE=default

# ChromaDB Configuration (Optional)
CHROMA_COLLECTION_NAME=runbooks

# Debug Mode (Optional)
DEBUG=false
